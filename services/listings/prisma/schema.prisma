// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
    output = "../../../subgraph-listings/node_modules/generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Amenity {
  id       String @id @map("_id") 
  category String
  name     String
}

model Listing {
  id              String              @id @map("_id") 
  title           String
  description     String
  costPerNight    Float
  hostId          String
  locationType    String
  numOfBeds       Int
  photoThumbnail  String
  isFeatured      Boolean?
  galacticCoordinateId  String?  @unique
  galacticCoordinate    GalacticCoordinates? @relation(fields: [galacticCoordinateId], references: [id])
}

model ListingAmenities {
  id        String   @id @map("_id") 
  ListingId String   @map("ListingId")
  AmenityId String   @map("AmenityId")
}

model GalacticCoordinates {
  id        String   @id @map("_id") 
  latitude  Float
  longitude Float
  listing   Listing? 
}

