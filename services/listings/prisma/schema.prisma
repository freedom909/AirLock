generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Amenity {
  id       String @id
  category String
  name     String
}

model Listing {
  id              String              @id 
  title           String
  description     String
  costPerNight    Float
  hostId          String
  locationType    String
  numOfBeds       Int
  photoThumbnail  String
  isFeatured      Boolean?
  // galacticCoordinateId  String?  @unique
  // galacticCoordinate    GalacticCoordinates? @relation(fields: [galacticCoordinateId], references: [id])
}

model ListingAmenities {
  id        String   @id 
  ListingId String   @map("ListingId")
  AmenityId String   @map("AmenityId")
}

